{
  "name": "Dasshio",
  "version": "0.0.2",
  "slug": "dasshio",
  "description": "Use Amazon Dash Buttons in Home Assistant",
  "url": "https://github.com/namekal/dasshio",
  "startup": "services",
  "arch": [
    "amd64",
    "armhf",
    "i386",
    "armv7",
    "aarch64"
  ],
  "boot": "auto",
  "host_network": true,
  "homeassistant_api": true,
  "image": "namekal/{arch}-dasshio",
  "options": {
    "request_timeout_secs": 0.5,
    "timeout": 10,
    "buttons": [
      {
        "name": "null",
        "address": "null",
        "domain": "",
        "service": "",
        "service_data": ""
      }
    ]
  },
  "schema": {
    "request_timeout_secs": "int?",
    "timeout": "int",
    "buttons": [
      {
        "name": "str",
        "address": "str",
        "url": "str?",
        "headers": "str?",
        "body": "str?",
        "domain": "str?",
        "service": "str?",
        "service_data": "str?"
      }
    ]
  }
}
